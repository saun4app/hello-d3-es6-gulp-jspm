{
  "build": {
    "root": "build",
    "js": "build/js",
    "css": "build/css",
    "bundle_file": "build/js/main.js"
  },
  "jspm_build": {
    "src_path": "src/js/main",
    "bundle_file": "build/js/main.js"
  },
  "css": {
    "src_array": ["./src/styles/*.css"],
    "bundle_file": "main.css"
  },
  "docs": {
    "root": "docs",
    "js": "docs/js",
    "css": "docs/css"
  },
  "html": {
    "src_array": ["src/**/*.html"]
  }
}